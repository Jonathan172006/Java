import java.util.Scanner;

public class AtividadeDoWhile {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int numero;

        // Loop que executa pelo menos uma vez e continua até que o número esteja entre 1 e 5
        do {
            System.out.print("Digite um número: ");
            numero = sc.nextInt();
        } while (numero < 1 || numero > 5);  // O loop termina se o número estiver entre 1 e 5

        System.out.println("Programa encerrado. Número entre 1 e 5 digitado: " + numero);
        sc.close();
    }
}
